<Page x:Class="ChatApp.Viwe.PageFolder.ChatMessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp.Viwe.PageFolder"
      mc:Ignorable="d" 
      Style="{StaticResource AuthorizationStyle}">
    <Border Margin="0" CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="\ContentFolder\IconsFolder\BackgraundImage.png" Stretch="UniformToFill"/>
        </Border.Background>
        <Grid Background="Transparent">
            <ListBox 
                x:Name="MessageListBox"
                Style="{StaticResource ListChatStyle}"
                Background="Transparent">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="Red"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource MessageBorder}" Margin="10">
                            <Grid
                                MinHeight="0"
                                MinWidth="0"
                                Margin="10" 
                                Width="auto" 
                                Height="auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Width="auto"
                                    Grid.Row="0"
                                    Style="{StaticResource ChatNameUserTextBlock}"
                                    Text="NameUser"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="1">
                                    <TextBlock
                                        MaxWidth="500"
                                        Width="auto"
                                        Style="{StaticResource ChatTitleUserTextBlock}"
                                        Text="{Binding TextMessage}"/>
                                    <TextBlock
                                        Width="30"
                                        Margin="10 10 0 0"
                                        Style="{StaticResource ChatTimeUserTextBlock}"
                                        Text="15:00"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Page>
