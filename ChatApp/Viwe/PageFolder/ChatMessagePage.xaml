<Page x:Class="ChatApp.Viwe.PageFolder.ChatMessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp.Viwe.PageFolder"
      mc:Ignorable="d" 
      Style="{StaticResource AuthorizationStyle}">
    <Border Margin="10" CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="\ContentFolder\IconsFolder\BackgraundImage.png" Stretch="UniformToFill"/>
        </Border.Background>
        <Grid Background="Transparent">
            <ListBox 
                x:Name="MessageListBox"
                Style="{StaticResource ListChatStyle}"
                Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource MessageBorder}" Margin="10">
                            <Grid
                                MinHeight="0"
                                MinWidth="0"
                                Margin="10" 
                                Width="auto" 
                                Height="auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Width="auto"
                                    Grid.Row="0"
                                    Style="{StaticResource ChatNameUserTextBlock}"
                                    Text="NameUser"/>
                                <TextBlock
                                    Grid.Column="0"
                                    MaxWidth="500"
                                    Width="auto"
                                    Grid.Row="1"
                                    Style="{StaticResource ChatTitleUserTextBlock}"
                                    Text="{Binding TextMessage}"/>
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0 0 5 8"
                                    Style="{StaticResource ChatTimeUserTextBlock}"
                                    Text="15:00"
                                    Grid.Row="1"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Page>
